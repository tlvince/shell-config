# vim: set fdm=marker:
# Overrides {{{1
alias ls='ls -hG'
alias df='df -h'
alias du='du -hc'
alias htop='htop -u $(whoami)'
alias poweroff='sudo poweroff'
alias reboot='sudo kxreboot'
alias s2ram='sudo s2ram -f'
alias s2disk='sudo s2disk'
alias net-profile='sudo net-profile'
alias free='free -m'
alias iftop='sudo iftop -i wlan0'
alias offlineimap='gpg -d $XDG_DATA_HOME/gpg/unlock.gpg && offlineimap -o'
alias visudo='sudo EDITOR=vim visudo'
alias quvi='quvi -f best'
alias diff='diff -u'
alias vi='vim'
alias iotop='sudo iotop -oa'
alias mysql='mysql --pager="less -nSFX"'
alias autossh='autossh -M 0'

# Shortcuts {{{1
alias xp='xprop | grep "WM_WINDOW_ROLE\|WM_CLASS"'
alias myip='curl --silent http://ip.tlvince.com'
alias acp='rsync -a --partial-dir=".rsync-partial" --progress'
alias sudu='sudo -iu'
alias pu='pushd'
alias po='popd'
alias ..='cd ..'
alias ...='cd ../..'
alias nosy='nosier -w "*.py" "nosetests2 -xs"'
alias ted='logvid -f "~/dwn/video/ted-top.m3u"'
alias webcam='mplayer tv:// -tv device=/dev/video0 -vf screenshot'
alias py='python'
alias cwd='pwd | tmux load-buffer -'
alias th='dict -d moby-thes'
alias bob='php artisan bob::build'
alias mk='mkdir -p'
alias rd='rmdir'
alias serve='python -m SimpleHTTPServer'
alias quviplay='quvi --exec "$PLAYER %u"'
alias quvidown='quvi --exec "aria2c %u"'

# Compression {{{2
alias 7z9='7z a -mx9 -mmt -ms'
alias 7zt='7z a -m0=PPMd -ms'
alias 7zp='7z9 -mhe'

# Single character {{{2
alias b='bookmark'
alias d='dict -d wn'
alias e='~/src/shell/scripts/vim-server.dash'
alias g='git'
alias i='offlineimap -f INBOX,Inbox && incount'
# j: reserved for autojump
alias l='ls -lA'
alias m='mutt'
alias n='newsbeuter'
alias o='open'
alias p='podbeuter'
alias s='spell'
alias t='todo'
alias u='urxvtc'
alias v='vim'

# Hosts {{{2
alias muddyirc='autossh -f -NL 6668:localhost:6668 muddy'
