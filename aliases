# .aliases: create or redefine commands. {{{1
# Copyright 2010-11 Tom Vincent <http://tlvince.com/contact/>
# vim: set fdm=marker:
# Overrides {{{1
alias ls='ls -h --color=auto'
alias df='df -h'
alias du='du -hc'
alias htop='htop -u $(whoami)'
alias poweroff='sudo poweroff'
alias reboot='sudo reboot'
alias s2ram='sudo s2ram -f'
alias s2disk='sudo s2disk'
alias net-profile='sudo net-profile'
alias free='free -m'
alias iftop='sudo iftop -i eth0'
alias mutt='mutt -F $XDG_CONFIG_HOME/mutt/muttrc'
alias offlineimap='offlineimap -c ~/.config/offlineimap/offlineimap.conf -o'
alias visudo='sudo EDITOR=vim visudo'
alias diff='colordiff -u'
alias msmtp='msmtp -C $XDG_CONFIG_HOME/msmtp/msmtprc'
alias motion='motion -c $XDG_CONFIG_HOME/motion/motion.conf'
alias cclive='cclive -f best'

# Package management {{{1
alias repkg='makepkg -efi'
alias pacman='sudo pacman'
alias update='pacman -Syu; aurget -Syu; sudo hostsman -u'
alias pinstall='pacman -S'
alias uninstall='pacman -Rsn'
alias funinstall='pacman -Rsnd'
alias clean='uninstall $(pacman -Qqdt) && sh ~/src/bash/clean-up.sh'

# Shortcuts {{{1
alias xp='xprop | grep "WM_WINDOW_ROLE\|WM_CLASS"'
alias mpdlocal='/usr/bin/mpd "$XDG_CONFIG_HOME/mpd/local.conf" && \
    mpdscribble --conf ~/.mpdscribble/mpdscribble-local.conf'
alias myip='echo $(curl -s http://tlvince.com/sandbox/ip.php)'
alias acp='rsync -a --partial-dir=".rsync-partial" --progress'
alias sudu='sudo -iu'
alias pu='pushd'
alias po='popd'
alias ..='cd ..'
alias nosy='nosier -w "*.py" "nosetests -xs"'
alias ted='logvid -f "~/dwn/video/ted-top.m3u"'
alias webcam='mplayer tv:// -tv device=/dev/video0 -vf screenshot'

# Single character {{{2
# j: reserved for autojump
alias l='ls -lA'
alias g='git'
alias m='mutt -z'
alias n='newsbeuter -q'
alias v='vim="gvim" viminfo="$XDG_CACHE_HOME/vim/viminfo" v'
