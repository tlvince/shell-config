# Create the directories as named operands and enter the first. {{{1
mkc() {
  mkdir -p "$@" && cd "$1"
}

# Spellchecker using aspell. {{{1
spell() {
  echo "$@" | aspell -a | egrep -v "^@|^$"
}

# Navigate $1 directories up. {{{1
up() {
  local path i
  [ $1 ] || set 1
  for ((i = 0; i < $1; i++)); do
    path="$path../"
  done
  cd "$path"
}
